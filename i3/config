# Print screen for screenshots
bindsym Print exec --no-startup-id scrot -q 90 "Screenshot %Y-%m-%d_%S-%M-%H.png" -e 'mv "$f" ~/Pictures/ && dunstify -t 2000 "Screenshot Captured" "File : ~/Pictures/$f"'
bindsym Control+Print exec --no-startup-id scrot -q 100 /tmp/ -e 'xclip -selection clipboard -t image/png $f && dunstify -t 2000 "Screenshot Captured"'
